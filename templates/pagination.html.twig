<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center m-0">
        {% set queryParameters = app.request.query.all|filter((value, key) => key != 'page') %}
        {% if (currentPage != 1) %}
            <li class="page-item"><a class="page-link" href="{{ path(app.request.attributes.get('_route'), queryParameters|merge({'page': currentPage - 1})) }}"><</a></li>
        {% endif %}
        {% for page in 1..pages %}
            <li class="page-item {{ currentPage == page ? 'active' : '' }}"><a class="page-link" href="{{ path(app.request.attributes.get('_route'), queryParameters|merge({'page': page})) }}">{{ page }}</a></li>
        {% endfor %}
        {% if (currentPage != pages) %}
            <li class="page-item"><a class="page-link" href="{{ path(app.request.attributes.get('_route'), queryParameters|merge({'page': currentPage + 1})) }}">></a></li>
        {% endif %}
    </ul>
</nav>